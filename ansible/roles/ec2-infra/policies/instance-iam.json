{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:CreateVolume",
                "ec2:AttachVolume"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::mnoe-packages/*"
            ]
        }
    ]
}